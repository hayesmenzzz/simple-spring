	<!-- **************************************** Spring+Quratz 配置跑批 START ************************************** -->
	<!-- Spring Quartz Start -->
	<!-- 线程执行器配置，用于任务注册 -->
	<bean id="executor"
		class="org.springframework.scheduling.concurrent.ThreadPoolTaskExecutor">
		<property name="corePoolSize" value="10" />
		<property name="maxPoolSize" value="100" />
		<property name="queueCapacity" value="500" />
	</bean>
	<!-- 定义业务逻辑处理类 将需要添加的定时任务调度的配置添加到此处 -->
	<bean id="myQuartz"
		class="com.seamount.spring.job.service.impl.ExpireJobTask_Quartz" />
	<!-- 调度业务 -->
	<bean id="jobDetail"
		class="org.springframework.scheduling.quartz.MethodInvokingJobDetailFactoryBean">
		<!-- 要调用的对象 -->
		<property name="targetObject" ref="myQuartz" />
		<!-- 要执行的方法名 -->
		<property name="targetMethod" value="doBusiness" />
		<!-- false:如果前一个任务还没有结束 那么第二个任务不会启动 -->
		<property name="concurrent" value="false" />
	</bean>
	<!-- 增加调度触发器 该调度配置延迟10s启动 每隔1分钟执行一次 -->
	<bean id="cronTrigger"
		class="org.springframework.scheduling.quartz.CronTriggerFactoryBean">
		<property name="jobDetail" ref="jobDetail" />
		<!-- <property name="startDelay" value="10000" /> -->
		<property name="cronExpression" value="0/5 * * * * ?" />
	</bean>
	<!-- 调度工厂 增加调度 设置调度 triggers属性中可以增加多个触发器 -->
	<bean id="schedulerBean"
		class="org.springframework.scheduling.quartz.SchedulerFactoryBean"
		lazy-init="false">
		<property name="triggers">
			<list>
				<ref bean="cronTrigger" />
			</list>
		</property>
		<property name="taskExecutor" ref="executor" />
	</bean>
	<!-- **************************************** spirng+Quratz 配置跑批 END ************************************** -->

















</beans> 